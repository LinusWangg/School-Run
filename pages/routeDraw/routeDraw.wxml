<view class="mainView">
    <map id="runMap" class="mapView" style="width: 100%; height: 100vh;" latitude="{{latitude}}"
        longitude="{{longitude}}" scale="100" polyline="{{polyline}}"
        show-location="{{false}}" markers="{{markers}}">
        
        <!--新的数据框-->
        <cover-view class="cover-card-shadow" style="  top: 0;" />
        <cover-view class="cover-card" style="top: 0;">
            <cover-view class="distance-block">
                <cover-view class="distance-block-digit">{{distance}}</cover-view>
                <cover-view class="distance-block-text">跑步公里</cover-view>
            </cover-view>
            <cover-view class="time-block">
                <cover-view class="time-block-digit">{{min}}分{{sec}}秒</cover-view>
                <cover-view class="time-block-text">总计用时</cover-view>
            </cover-view>
        </cover-view>
        <!--新的控件框-->
        <cover-view class="cover-card-bottom-shadow" style="bottom: 0;" />
        <cover-view class="cover-card-bottom" style="bottom: 0;">
        <cover-view class="date-block">
        <cover-view class="date-block-digit">{{post_time}}</cover-view>
        <cover-view class="date-block-text">跑步日期</cover-view>
        </cover-view>
        </cover-view>
    </map>
</view>