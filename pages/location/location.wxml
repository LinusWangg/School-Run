<view class="mainView">
   <map
        class="mapView"
        style="width: 100%; height: 100vh;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        scale="100"
        polyline="{{polyline}}"
        markers="{{markers}}"
        show-location="{{true}}"
    >
        <!--开始 按键-->
        <cover-view class='ButtonLayout'>
        <block wx:if="{{!start}}">
            <button class='StartRunButton' bindtap="startRun">
                <cover-image class='ButtonImage' src="../../iconPicture/start.png"></cover-image>
            </button>
        </block>
        <!--暂停 按键-->
        <block wx:else>
            <button class='StopRunButton' bindtap="stopRun">
                <cover-image class='ButtonImage' src="../../iconPicture/stop.png"></cover-image>
            </button>
        </block>
        </cover-view>

        <!--停止按 键-->
        <cover-view wx:if="{{!start}}" class='ClearButtonLayout'>
            <block>
                <button class='ClearButton' bindtap="clearRun">
                    <cover-image class='ClearButtonImage' src="../../iconPicture/clear.png"></cover-image>
                </button>
            </block>
        </cover-view>

        <cover-view class="Container">
            <cover-view class="CoverText">\n里程数：{{meters}}km</cover-view>
            <cover-view class="CoverText">\n\n时 间：{{time}}</cover-view>
        </cover-view>
    </map>
</view>