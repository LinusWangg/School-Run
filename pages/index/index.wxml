<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">  
  <block wx:for="{{imgUrls}}">  
    <swiper-item>  
      <navigator url="{{item.link}}" hover-class="navigator-hover">  
        <image src="{{item.url}}" class="slide-image" width="100%" height="500px"/>  
      </navigator>  
    </swiper-item>  
  </block>  
 </swiper>  
<view class="brock">
  <text wx:if="{{isOn}}">学号:</text>
  <text wx:if="{{isOn}}">{{stdid}}\n</text>
  <text wx:if="{{isOn}}">open_id:</text>
  <text wx:if="{{isOn}}">{{openid}}\n</text>
  <text wx:if="{{isOn}}">早操打卡次数:</text>
  <text wx:if="{{isOn}}">{{time}}\n</text>
</view>
<button wx:if="{{!isOn}}" bindtap="GetSql">登录/注册</button>
<modal hidden="{{hiddenmodalput}}" title="完善资料" confirm-text="提交" cancel-text="取消" bindcancel="cancelM" bindconfirm="confirmM">
  <input bindinput='iStudent' type='text' placeholder="请输入学号..." />
</modal>
<modal hidden="{{hiddeinfo}}" title="登陆成功" cancel-text="确认" bindcancel="cancelS" confirm-text="申诉" bindconfirm='justice'>
  <text>学号:</text>
  <text>{{stdid}}\n</text>
  <text>open_id:</text>
  <text>{{openid}}\n</text>
  <text>早操打卡次数:</text>
  <text>{{time}}\n</text>
</modal>

